<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/chooser_time_display"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="bottom|center"
        android:text="@string/chooser_remove_display_empty"
        android:textAlignment="center"
        android:textSize="@dimen/font_size_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/chooser_btn_remove_5min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="add"
            android:text="@string/chooser_btn_remove_5min" />

        <Button
            android:id="@+id/chooser_btn_remove_10min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="add"
            android:text="@string/chooser_btn_remove_10min" />

    </LinearLayout>

</LinearLayout>
